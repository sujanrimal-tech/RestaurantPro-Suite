{
  "compilerOptions": {
    "target": "esnext",        // Output modern JavaScript
    "module": "esnext",        // Use ES module system
    "jsx": "react-jsx",        // Use React's new JSX transform
    "outDir": "./",            // Output .js files alongside .ts/.tsx files
    "rootDir": "./",           // Specify the root directory of your source files
    "esModuleInterop": true,   // Enables compatibility with CommonJS modules
    "forceConsistentCasingInFileNames": true,
    "strict": true,            // Enable all strict type-checking options
    "skipLibCheck": true       // Skip type checking of declaration files
  },
  "include": ["**/*.ts", "**/*.tsx"], // Tells tsc which files to compile
  "exclude": ["node_modules"]       // Don't compile node_modules
}
